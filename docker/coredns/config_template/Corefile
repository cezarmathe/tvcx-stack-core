tvcxn.et:53 {
    errors
    log
    reload
    file /config/db.tvcxn.et {
        reload 1m
    }
}

# Forward the DNS requests to Consul.
cons.ul:53 {
    cache 60
    errors
    log
    reload
    forward . 127.0.0.1:8600
}

# Forward all other requests to the Cloudflare DNS servers.
.:53 {
    cache 30
    errors
    forward . tls://1.1.1.1 tls://1.0.0.1 {
       tls_servername cloudflare-dns.com
       health_check 5s
    }
    reload
}
